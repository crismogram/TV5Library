<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>TV5 News eLibrary</title>
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/MySite.css" rel="stylesheet" />
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <script src="~/Scripts/jquery-1.8.2.min.js"></script>
        <script src="~/Scripts/jquery-ui-1.8.24.js"></script>
        <script src="~/Scripts/modernizr-2.6.2.js"></script>
        <script src="~/Content/bootstrap.js"></script>
        <meta name="viewport" content="width=device-width" />

    </head>
    <body>
    
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="~/MemberArea/Dashboard.cshtml">TV5 News eLibrary</a>
                </div>
                <div class="navbar-collapse collapse">

                    <ul class="nav navbar-nav navbar-right">
                        @if (WebSecurity.IsAuthenticated)
                        {
                        <li class="text-center">
                            <form id="logoutForm" action="~/Account/Logout" method="post">
                                @AntiForgery.GetHtml()
                                <a class="navbar navbar-link" href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
                            </form>
                        </li>
                        }
                        else
                        {
                                <li class="text-center"><a href="~/Account/Register">Register</a></li>
                                <li class="text-center"><a href="~/Account/Login.cshtml">Login</a></li>
                            
                        }
                    </ul>
                </div>
            </div>
        </div>
        <br /><br /><br /><br /><br />
        <div id="body" class="container body-content">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                <br />
                @RenderBody()
            </section>
        </div>

        <div class="container-fluid navbar">
            <div class="navbar-fixed-bottom container body-content row">
                <hr />
                <footer class=" text-center">
                    <p>&copy; @DateTime.Now.Year - TV5 News eLibrary</p>
                </footer>
            </div>

        </div>

        @RenderSection("Scripts", required: false)

    </body>
</html>